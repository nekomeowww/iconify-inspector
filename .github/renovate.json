{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "dependencyDashboard": true,
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "schedule:weekly",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "ignoreDeps": [],
  "labels": ["dependencies"],

  "packageRules": [
    {
      "description": "Isolate PRs for pinned dependencies (no ^ or ~), and split patch/minor/major",
      // matches exact semver like 1.2.3 (adjust if you also pin pre-releases)
      "matchCurrentValue": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$",
      "groupName": null, // cancel any grouping from presets
      "separateMinorPatch": true, // split patch vs minor
      "separateMajorMinor": true, // split major vs minor
      "separateMultipleMinor": true, // one PR per minor step if multiple are available
      "separateMultipleMajor": true, // one PR per major step if multiple are available
      "rangeStrategy": "bump" // fine for pinned; keeps exact spec as exact
    },
    {
      "description": "Group only ranged patch updates (leave pinned alone)",
      "matchCurrentValue": "^[^0-9].*|\\d+\\.\\d+\\.\\d+\\s*-\\s*.*|[<>=~^].*",
      "matchUpdateTypes": ["patch"],
      "groupName": "all non-minor dependencies"
    }
  ],

  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 30,
  "prHourlyLimit": 0,

  // Keep "bump": for pinned specs Renovate will still bump to the next exact version.
  "rangeStrategy": "bump",

  "rebaseWhen": "conflicted",
  "schedule": "on sunday before 6:00am",
  "timezone": "UTC",

  // Global splitting (safe even with the pinned-only rule above)
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMinor": true,
  "separateMultipleMajor": true
}
