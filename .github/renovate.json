{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "dependencyDashboard": true,
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "schedule:weekly",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "ignoreDeps": [],
  "labels": ["dependencies"],

  "packageRules": [
    // 1) Pinned deps: isolate
    {
      "description": "Isolate PRs for pinned deps (exact x.y.z)",
      "matchManagers": ["npm", "pnpm", "yarn", "bun"],
      "matchDepTypes": ["dependencies", "devDependencies", "optionalDependencies", "peerDependencies"],
      // exact semver, optionally with pre-release/build metadata
      "matchCurrentValue": "^\\d+\\.\\d+\\.\\d+([+-][0-9A-Za-z.-]+)?$",
      "groupName": null,
      "separateMinorPatch": true,
      "separateMajorMinor": true,
      "separateMultipleMinor": true,
      "separateMultipleMajor": true
    },

    // 2) Non-pinned deps: group non-majors (minor + patch) together
    {
      "description": "Group non-major bumps for ranged specs (^ / ~ / comparators)",
      "matchManagers": ["npm", "pnpm", "yarn", "bun"],
      "matchDepTypes": ["dependencies", "devDependencies", "optionalDependencies", "peerDependencies"],
      // anything starting with ^ or ~ OR contains <, >, =, ||, - (range-ish)
      "matchCurrentValue": "^[~^]|[<>=| -]",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "deps (non-major)",
      // override any global splitting so minor+patch can be grouped
      "separateMinorPatch": false,
      "separateMajorMinor": true,
      "separateMultipleMinor": false,
      "separateMultipleMajor": true
    }
  ],

  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 30,
  "prHourlyLimit": 0,

  // Keep "bump": for pinned specs Renovate will still bump to the next exact version.
  "rangeStrategy": "bump",

  "rebaseWhen": "conflicted",
  "schedule": "on sunday before 6:00am",
  "timezone": "UTC",

  // Global splitting (safe even with the pinned-only rule above)
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMinor": true,
  "separateMultipleMajor": true
}
